<!-- pages/settings/settings.wxml -->
<view class="page-settings">
    <!-- 意见反馈 -->
    <view class="section-card">
        <view class="setting-item" bindtap="goToFeedback">
            <view class="setting-left">
                <view class="setting-icon feedback-icon"></view>
                <text class="setting-name">意见反馈</text>
            </view>
            <text class="setting-arrow">></text>
        </view>
    </view>

    <!-- 联系客服 -->
    <view class="section-card">
        <view class="setting-item" bindtap="callService">
            <view class="setting-left">
                <view class="setting-icon service-icon"></view>
                <text class="setting-name">联系客服</text>
            </view>
            <text class="setting-value">400-888-8888</text>
        </view>
    </view>

    <!-- 设置 -->
    <view class="section-card">
        <view class="setting-item" bindtap="clearCache">
            <view class="setting-left">
                <view class="setting-icon settings-icon"></view>
                <text class="setting-name">清除缓存</text>
            </view>
            <text class="setting-value">{{cacheSize}}</text>
        </view>
        <view class="setting-item" bindtap="goToAbout">
            <view class="setting-left">
                <view class="setting-icon about-icon"></view>
                <text class="setting-name">关于我们</text>
            </view>
            <text class="setting-arrow">></text>
        </view>
    </view>
</view>
