/* pages/settings/settings.wxss */
.page-settings {
    min-height: 100vh;
    background: #f5f7fa;
    padding: 20rpx 30rpx;
    padding-bottom: 100rpx;
}

.section-card {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 0 30rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.setting-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
    border-bottom: none;
}

.setting-left {
    display: flex;
    align-items: center;
    flex: 1;
}

.setting-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
}

/* 意见反馈图标 - 紫色圆点 */
.feedback-icon {
    background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
    border-radius: 50%;
}

/* 联系客服图标 - 橙色电话 */
.service-icon {
    background: linear-gradient(135deg, #fb923c 0%, #f97316 100%);
    border-radius: 50%;
    position: relative;
}

.service-icon::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 20rpx;
    height: 20rpx;
    border: 3rpx solid #fff;
    border-radius: 4rpx;
    border-top-right-radius: 12rpx;
}

/* 设置图标 - 灰色齿轮 */
.settings-icon {
    background: linear-gradient(135deg, #9ca3af 0%, #6b7280 100%);
    border-radius: 50%;
}

/* 关于图标 */
.about-icon {
    background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    border-radius: 50%;
}

.setting-name {
    font-size: 30rpx;
    color: #333333;
}

.setting-arrow {
    font-size: 28rpx;
    color: #cccccc;
}

.setting-value {
    font-size: 28rpx;
    color: #cfa972;
    font-weight: 500;
}
