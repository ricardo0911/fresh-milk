/* pages/vip/vip.wxss - 会员中心样式（高端设计） */

.page-vip {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a2a5e 0%, #0f1a3e 100%);
  padding-bottom: 180rpx;
}

/* 顶部背景 */
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #1a2a5e 0%, #2a4a9e 50%, #1a2a5e 100%);
  overflow: hidden;
}

.header-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: radial-gradient(circle at 30% 20%, rgba(255,215,0,0.1) 0%, transparent 50%),
                    radial-gradient(circle at 70% 60%, rgba(255,215,0,0.08) 0%, transparent 40%);
}

/* 会员卡片 */
.member-card {
  position: relative;
  margin: 140rpx 30rpx 30rpx;
  z-index: 1;
}

.card-inner {
  background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.4);
  border: 1rpx solid rgba(255,215,0,0.3);
}

.member-info {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(255,255,255,0.1);
}

.avatar-wrap {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #ffd700;
}

.crown-icon {
  position: absolute;
  top: -16rpx;
  right: -8rpx;
  font-size: 32rpx;
}

.info-content {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: 600;
  color: #fff;
  display: block;
  margin-bottom: 8rpx;
}

.level-tag {
  display: inline-block;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  background: linear-gradient(90deg, #b8860b, #daa520);
  color: #fff;
}

.level-tag.silver {
  background: linear-gradient(90deg, #a0a0a0, #c0c0c0);
}

.level-tag.gold {
  background: linear-gradient(90deg, #b8860b, #daa520);
}

.level-tag.platinum {
  background: linear-gradient(90deg, #4a4a6a, #8a8aaa);
}

.level-tag.regular {
  background: linear-gradient(90deg, #666, #888);
}

.member-status {
  display: flex;
  padding-top: 24rpx;
}

.status-item {
  flex: 1;
  text-align: center;
}

.status-item.full {
  flex: none;
  width: 100%;
}

.status-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
  margin-bottom: 8rpx;
}

.status-value {
  display: block;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.status-value.highlight {
  color: #ffd700;
  font-size: 32rpx;
  font-weight: 700;
}

.status-tip {
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
}

/* 权益说明 */
.benefits-section {
  margin: 30rpx;
  background: rgba(255,255,255,0.05);
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 24rpx;
}

.title-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.benefits-grid {
  display: flex;
  flex-wrap: wrap;
}

.benefit-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
}

.benefit-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.benefit-name {
  font-size: 26rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.benefit-desc {
  font-size: 22rpx;
  color: rgba(255,255,255,0.6);
}

/* 套餐选择 */
.plans-section {
  margin: 30rpx;
}

.plans-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-card {
  position: relative;
  background: rgba(255,255,255,0.08);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.plan-card.selected {
  border-color: #ffd700;
  background: rgba(255,215,0,0.1);
}

.plan-card.silver.selected {
  border-color: #c0c0c0;
  background: rgba(192,192,192,0.1);
}

.plan-card.gold.selected {
  border-color: #ffd700;
  background: rgba(255,215,0,0.1);
}

.plan-card.platinum.selected {
  border-color: #b8b8d8;
  background: rgba(184,184,216,0.1);
}

.plan-badge {
  position: absolute;
  top: 0;
  right: 30rpx;
  background: linear-gradient(90deg, #ff6b6b, #ff8e53);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 0 0 10rpx 10rpx;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}

.plan-level {
  font-size: 24rpx;
  color: #ffd700;
}

.plan-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #ff6b6b;
}

.price-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.price-original {
  font-size: 24rpx;
  color: rgba(255,255,255,0.4);
  text-decoration: line-through;
  margin-left: 16rpx;
}

.plan-info {
  display: flex;
  gap: 24rpx;
}

.plan-duration,
.plan-discount {
  font-size: 24rpx;
  color: rgba(255,255,255,0.7);
}

.plan-discount {
  color: #ffd700;
}

.plan-check {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  background: #ffd700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1a2a5e;
  font-weight: 700;
  font-size: 28rpx;
}

/* 底部购买 */
.footer-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, transparent, #0f1a3e 30%);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.price-summary {
  flex: 1;
}

.summary-label {
  font-size: 26rpx;
  color: rgba(255,255,255,0.7);
}

.summary-price {
  font-size: 40rpx;
  font-weight: 700;
  color: #ff6b6b;
}

.buy-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(90deg, #ffd700, #ffaa00);
  border-radius: 44rpx;
  color: #1a2a5e;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.buy-btn.disabled {
  opacity: 0.5;
}

.buy-btn::after {
  border: none;
}

/* 安全提示 */
.safe-tips {
  text-align: center;
  padding: 30rpx 0 20rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,0.4);
}
