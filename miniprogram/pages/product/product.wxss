/* pages/product/product.wxss */

.page-product {
  padding-bottom: 140rpx;
  background: var(--bg-color);
}

/* 产品画廊 */
.product-gallery {
  height: 600rpx;
}

.gallery-image {
  width: 100%;
  height: 100%;
}

/* 价格区块 */
.price-section {
  background: linear-gradient(135deg, #fff1f2, #fef3c7);
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.price-main {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--text-primary);
}

.price-symbol {
  font-size: 32rpx;
  margin-right: 4rpx;
  font-weight: 700;
}

.member-price-tag {
  display: flex;
  align-items: center;
  background: #1e3a5f;
  color: #fbbf24;
  font-size: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  height: 36rpx;
}

.member-label {
  background: #fbbf24;
  color: #1e3a5f;
  padding: 0 8rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-weight: 600;
}

.member-price {
  padding: 0 10rpx;
  font-weight: 700;
}

.price-original {
  font-size: 28rpx;
  color: var(--text-placeholder);
  text-decoration: line-through;
}

.price-tag {
  padding: 4rpx 12rpx;
  background: var(--error-color);
  color: #ffffff;
  font-size: 22rpx;
  border-radius: 6rpx;
}

.promo-row {
  display: flex;
  gap: 24rpx;
}

.promo-item {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 产品信息 */
.info-section {
  margin: 20rpx;
}

.product-tags {
  margin-bottom: 12rpx;
  display: flex;
  gap: 8rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  margin-bottom: 12rpx;
}

.product-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 规格信息 */
.specs-section {
  margin: 20rpx;
}

.spec-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.spec-row:last-child {
  border-bottom: none;
}

.spec-label {
  width: 120rpx;
  color: var(--text-secondary);
  font-size: 26rpx;
}

.spec-value {
  flex: 1;
  color: var(--text-primary);
  font-size: 26rpx;
}

/* 标签页 */
.tabs-section {
  margin: 20rpx;
}

.tabs-header {
  display: flex;
  gap: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-color);
  margin-bottom: 20rpx;
}

.tab-btn {
  font-size: 28rpx;
  color: var(--text-secondary);
  padding-bottom: 20rpx;
  position: relative;
}

.tab-btn.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-btn.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
}

.tab-content {
  padding: 20rpx 0;
}

.detail-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.8;
}

.review-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.review-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.review-content {
  flex: 1;
}

.review-name {
  font-size: 26rpx;
  font-weight: 500;
  display: block;
}

.review-rating {
  font-size: 22rpx;
  color: var(--accent-color);
  display: block;
  margin: 8rpx 0;
}

.review-text {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.bottom-left {
  display: flex;
  gap: 24rpx;
  flex-shrink: 0;
}

.bottom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  padding: 0 8rpx;
}

.bottom-icon {
  font-size: 36rpx;
}

.bottom-text {
  font-size: 20rpx;
  color: #666;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -12rpx;
  min-width: 28rpx;
  height: 28rpx;
  padding: 0 6rpx;
  background: #e53935;
  color: #ffffff;
  font-size: 18rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-right {
  flex: 1;
  display: flex;
  gap: 12rpx;
  margin-left: 20rpx;
}

.action-btn {
  flex: 1;
  padding: 20rpx 0;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 36rpx;
  border: none;
  text-align: center;
  line-height: 1.4;
}

.btn-cart {
  background: #ffffff;
  color: #10b981;
  border: 2rpx solid #10b981;
}

.btn-buy {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
}

