/* pages/member/member.wxss - 会员社区样式 */

.page-member {
  min-height: 100vh;
  background: #f5f7fa;
  position: relative;
}

/* 顶部标签导航 */
.top-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 30rpx;
  gap: 40rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  font-size: 30rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1a2a5e;
  font-weight: 700;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: #1a2a5e;
  border-radius: 3rpx;
}

/* 主滚动区 */
.main-scroll {
  height: calc(100vh - 100rpx);
}

/* 活动Banner */
.promo-banner {
  margin: 20rpx;
  height: 300rpx;
  background: linear-gradient(135deg, #1a2a5e 0%, #2d4a8e 100%);
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx;
}

.banner-overlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  width: 60%;
  background: linear-gradient(90deg, transparent 0%, rgba(207,169,114,0.2) 100%);
}

.banner-content {
  position: relative;
  z-index: 2;
}

.banner-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  margin-bottom: 24rpx;
}

.banner-btn {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(255,255,255,0.3);
}

.banner-tag {
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,0.6);
}

/* Section通用 */
.section {
  margin: 20rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-icon {
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a2a5e;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 话题滚动 */
.topic-scroll {
  white-space: nowrap;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.topic-card {
  display: inline-block;
  width: 280rpx;
  height: 180rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 16rpx;
  position: relative;
}

.topic-image {
  width: 100%;
  height: 100%;
}

.topic-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, transparent 40%, rgba(0,0,0,0.6) 100%);
}

.topic-name {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  right: 16rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.topic-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-top: 20rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ddd;
}

.dot.active {
  background: #1a2a5e;
  width: 24rpx;
  border-radius: 6rpx;
}

/* 过滤标签 */
.filter-tabs {
  display: flex;
  gap: 20rpx;
}

.filter-tab {
  font-size: 26rpx;
  color: #666;
  padding: 12rpx 28rpx;
  border-radius: 30rpx;
  background: #f5f5f5;
}

.filter-tab.active {
  background: #1a2a5e;
  color: #fff;
}

/* 瀑布流 */
.waterfall {
  display: flex;
  gap: 16rpx;
  padding: 0 20rpx;
}

.waterfall-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.post-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.post-image {
  width: 100%;
  display: block;
}

.post-info {
  padding: 16rpx;
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.user-name {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.like-wrap {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.like-icon {
  font-size: 24rpx;
}

.like-count {
  font-size: 22rpx;
  color: #999;
}

.post-content {
  font-size: 24rpx;
  color: #333;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 底部留白 */
.footer-space {
  height: 150rpx;
}

/* 发布按钮 */
.publish-btn {
  position: fixed;
  bottom: 180rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #1a2a5e, #2d4a8e);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(26,42,94,0.4);
  z-index: 100;
}

.publish-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}
