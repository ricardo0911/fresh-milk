<view class="container">
  <view class="form-group">
    <view class="input-item">
      <text class="label">原密码</text>
      <input class="input" type="{{showOldPassword ? 'text' : 'password'}}" value="{{oldPassword}}" placeholder="请输入原密码" bindinput="onOldPasswordInput"/>
      <view class="eye-icon" bindtap="toggleOldPassword">
        <text>{{showOldPassword ? '🙈' : '👁'}}</text>
      </view>
    </view>
    <view class="divider"></view>
    <view class="input-item">
      <text class="label">新密码</text>
      <input class="input" type="{{showNewPassword ? 'text' : 'password'}}" value="{{newPassword}}" placeholder="请输入新密码" bindinput="onNewPasswordInput"/>
      <view class="eye-icon" bindtap="toggleNewPassword">
        <text>{{showNewPassword ? '🙈' : '👁'}}</text>
      </view>
    </view>
    <view class="divider"></view>
    <view class="input-item">
      <text class="label">确认密码</text>
      <input class="input" type="{{showConfirmPassword ? 'text' : 'password'}}" value="{{confirmPassword}}" placeholder="请再次输入新密码" bindinput="onConfirmPasswordInput"/>
      <view class="eye-icon" bindtap="toggleConfirmPassword">
        <text>{{showConfirmPassword ? '🙈' : '👁'}}</text>
      </view>
    </view>
  </view>

  <view class="tips">
    <text class="tip-text">密码长度至少8位，建议包含字母和数字</text>
  </view>

  <view class="btn-area">
    <button class="submit-btn" bindtap="submitChangePassword">确认修改</button>
  </view>
</view>
