<!-- pages/login/login.wxml - 登录页面 -->
<view class="page-login">
  <view class="login-header">
    <text class="login-logo">🥛</text>
    <text class="login-title">鲜奶直达</text>
    <text class="login-desc">新鲜每一天</text>
  </view>

  <view class="login-form">
    <view class="form-group">
      <text class="form-icon">📱</text>
      <input class="form-input" type="number" placeholder="请输入手机号" maxlength="11"
             value="{{phone}}" bindinput="onPhoneInput" />
    </view>
    <view class="form-group">
      <text class="form-icon">🔒</text>
      <input class="form-input" type="text" password="{{true}}" placeholder="请输入密码"
             value="{{password}}" bindinput="onPasswordInput" />
    </view>

    <button class="login-btn" bindtap="login" disabled="{{isLoading}}">
      {{isLoading ? '登录中...' : '登 录'}}
    </button>

    <view class="login-options">
      <text class="option-link" bindtap="goToRegister">注册账号</text>
      <text class="option-divider">|</text>
      <text class="option-link" bindtap="goToForgotPassword">忘记密码</text>
    </view>
  </view>

  <view class="login-footer">
    <text class="login-agreement">
      登录即表示同意 <text class="link">用户协议</text> 和 <text class="link">隐私政策</text>
    </text>
  </view>
</view>
