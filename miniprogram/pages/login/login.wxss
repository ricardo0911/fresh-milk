/* pages/login/login.wxss - 登录页样式 */
.page-login {
  min-height: 100vh;
  background: linear-gradient(180deg, #10b981 0%, #e8f5e9 50%, #f5f5f5 100%);
  display: flex;
  flex-direction: column;
}

/* 头部 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx 60rpx;
}

.login-logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.login-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.login-desc {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 12rpx;
}

/* 表单 */
.login-form {
  margin: 0 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
}

.form-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 24rpx 0;
  margin-bottom: 16rpx;
}

.form-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.form-input::placeholder {
  color: #bbb;
}

.login-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 28rpx;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.login-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.login-options {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
  gap: 24rpx;
}

.option-link {
  font-size: 26rpx;
  color: #10b981;
}

.option-divider {
  font-size: 26rpx;
  color: #ddd;
}

/* 底部 */
.login-footer {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 40rpx;
  padding-bottom: calc(60rpx + env(safe-area-inset-bottom));
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #ddd;
}

.divider-text {
  font-size: 24rpx;
  color: #999;
  padding: 0 24rpx;
}

.social-login {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.social-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
}

.wx-btn {
  background: #07c160;
  color: #fff;
}

.phone-btn {
  background: #fff;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.social-icon {
  font-size: 36rpx;
}

.social-text {
  font-size: 28rpx;
}

.login-agreement {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 32rpx;
}

.login-agreement .link {
  color: #10b981;
}
