/* pages/cart/cart.wxss */

.page-cart {
  padding-bottom: 120rpx;
  min-height: 100vh;
  background: var(--bg-color);
}

.cart-list {
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.cart-checkbox {
  margin-right: 20rpx;
}

.cart-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.cart-info {
  flex: 1;
  margin-left: 20rpx;
}

.cart-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
}

.cart-spec {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  margin-top: 8rpx;
}

.cart-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.quantity-selector {
  display: flex;
  align-items: center;
  background: var(--bg-color);
  border-radius: 8rpx;
}

.qty-btn {
  width: 56rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: var(--text-secondary);
}

.qty-value {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.cart-delete {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: var(--text-placeholder);
}

/* 底部结算栏 */
.cart-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.cart-summary {
  flex: 1;
  text-align: right;
  margin-right: 20rpx;
}

.summary-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.summary-price {
  font-size: 36rpx;
}

.checkout-btn {
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 40rpx;
  border: none;
}

.checkout-btn.disabled {
  opacity: 0.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.btn {
  padding: 24rpx 48rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
}

/* 猜你喜欢 - 响应式设计 */
.section {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.guess-section {
  background: #f8fafc;
  margin-bottom: 120rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.guess-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.guess-icon {
  font-size: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 网格容器 - 单列布局 */
.guess-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 商品卡片 - 横向布局 */
.guess-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: row;
}

/* 图片区域 - 自适应 */
.guess-image-wrap {
  position: relative;
  width: 35vw;
  max-width: 280rpx;
  min-width: 200rpx;
  aspect-ratio: 1;
  flex-shrink: 0;
}

.guess-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.guess-fresh-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #10b981, #059669);
  padding: 10rpx 14rpx;
  border-radius: 0 16rpx 0 12rpx;
  text-align: center;
}

.fresh-days {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1.2;
}

.fresh-label {
  display: block;
  font-size: 16rpx;
  color: rgba(255,255,255,0.9);
}

/* 商品信息区 - 弹性适配 */
.guess-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.guess-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.guess-spec {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

.guess-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
  padding-top: 12rpx;
}

.guess-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #e53935;
}

.guess-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.action-btn-text {
  font-size: 24rpx;
  color: #10b981;
  padding: 12rpx 20rpx;
  border: 2rpx solid #10b981;
  border-radius: 24rpx;
  font-weight: 500;
}


