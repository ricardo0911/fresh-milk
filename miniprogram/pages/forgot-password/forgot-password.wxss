/* pages/forgot-password/forgot-password.wxss - 忘记密码页样式 */
.page-forgot {
  min-height: 100vh;
  background: linear-gradient(180deg, #10b981 0%, #e8f5e9 50%, #f5f5f5 100%);
  display: flex;
  flex-direction: column;
}

/* 头部 */
.forgot-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx 60rpx;
}

.forgot-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.forgot-desc {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 12rpx;
}

/* 表单 */
.forgot-form {
  margin: 0 40rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
}

.form-group {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 24rpx 0;
  margin-bottom: 16rpx;
}

.form-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.form-input::placeholder {
  color: #bbb;
}

.code-btn {
  font-size: 24rpx;
  color: #10b981;
  background: transparent;
  padding: 12rpx 24rpx;
  border: 2rpx solid #10b981;
  border-radius: 32rpx;
  line-height: 1.2;
  min-width: 160rpx;
}

.code-btn[disabled] {
  color: #999;
  border-color: #ddd;
}

.submit-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 28rpx;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.submit-btn[disabled] {
  background: #ccc;
  box-shadow: none;
}

.forgot-options {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
}

.option-link {
  font-size: 26rpx;
  color: #10b981;
}
