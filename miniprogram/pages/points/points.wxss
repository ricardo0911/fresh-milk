/* pages/points/points.wxss - 积分详情页样式 */
.page-container {
    min-height: 100vh;
    background: #f5f5f5;
}

/* 积分头部 */
.points-header {
    position: relative;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
}

.points-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #1a2a5e 0%, #2d4a8e 100%);
}

.points-info {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.points-label {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.8);
}

.points-value {
    font-size: 72rpx;
    font-weight: bold;
    color: #d4a574;
    margin: 10rpx 0;
}

.points-tip {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.6);
}

/* Tab切换 */
.tab-bar {
    display: flex;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}

.tab-item {
    flex: 1;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    color: #666;
    position: relative;
}

.tab-item.active {
    color: #1a2a5e;
    font-weight: 500;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 4rpx;
    background: #1a2a5e;
    border-radius: 2rpx;
}

/* 内容区域 */
.content-area {
    padding: 20rpx;
}

/* 积分记录列表 */
.records-list {
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.record-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
    border-bottom: none;
}

.record-left {
    display: flex;
    flex-direction: column;
}

.record-desc {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.record-date {
    font-size: 24rpx;
    color: #999;
}

.record-points {
    font-size: 32rpx;
    font-weight: 500;
}

.record-points.earn {
    color: #d4a574;
}

.record-points.spend {
    color: #999;
}

/* 优惠券列表 */
.coupons-list {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
}

.coupon-card {
    display: flex;
    background: #fff;
    border-radius: 16rpx;
    overflow: hidden;
}

.coupon-left {
    width: 180rpx;
    background: linear-gradient(135deg, #1a2a5e 0%, #2d4a8e 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 30rpx 0;
}

.coupon-amount {
    display: flex;
    align-items: baseline;
    color: #d4a574;
}

.coupon-amount .currency {
    font-size: 28rpx;
}

.coupon-amount .value {
    font-size: 56rpx;
    font-weight: bold;
}

.coupon-condition {
    font-size: 22rpx;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 8rpx;
}

.coupon-right {
    flex: 1;
    padding: 24rpx;
    display: flex;
    flex-direction: column;
}

.coupon-name {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 8rpx;
}

.coupon-desc {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 16rpx;
}

.coupon-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
}

.points-cost {
    font-size: 26rpx;
    color: #d4a574;
    font-weight: 500;
}

.exchange-btn {
    padding: 12rpx 32rpx;
    background: linear-gradient(135deg, #d4a574 0%, #c49464 100%);
    color: #fff;
    font-size: 26rpx;
    border-radius: 30rpx;
}

.exchange-btn.disabled {
    background: #ccc;
    color: #999;
}

/* 空状态 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.empty-text {
    font-size: 28rpx;
    color: #999;
}
