/* pages/order-result/order-result.wxss - 支付结果样式 */
.page-result {
  min-height: 100vh;
  background: linear-gradient(180deg, #10b981 0%, #e8f5e9 300rpx, #f5f5f5 300rpx);
  padding: 40rpx;
  box-sizing: border-box;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  margin-top: 60rpx;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-icon.success {
  background: linear-gradient(135deg, #10b981, #34d399);
}

.result-icon.fail {
  background: linear-gradient(135deg, #ef4444, #f87171);
}

.result-icon.pending {
  background: linear-gradient(135deg, #f59e0b, #fbbf24);
}

.check-icon,
.fail-icon,
.pending-icon {
  font-size: 60rpx;
  color: #fff;
  font-weight: bold;
}

.result-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

.result-amount-wrap {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 32rpx;
}

.result-currency {
  font-size: 36rpx;
  font-weight: 600;
  color: #10b981;
}

.result-amount {
  font-size: 64rpx;
  font-weight: 700;
  color: #10b981;
}

.result-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
}

/* 订单信息 */
.result-info {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  text-align: left;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 26rpx;
  color: #999;
}

.info-value {
  font-size: 26rpx;
  color: #333;
}

/* 倒计时 */
.countdown-wrap {
  margin: 24rpx 0;
}

.countdown-text {
  font-size: 28rpx;
  color: #f59e0b;
  font-weight: 500;
}

/* 按钮 */
.retry-btn,
.pay-now-btn {
  margin-top: 32rpx;
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.btn-outline {
  background: #fff;
  color: #10b981;
  border: 2rpx solid #10b981;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

/* 温馨提示 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 推荐商品 */
.recommend-section {
  margin-top: 48rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.product-scroll {
  white-space: nowrap;
  display: flex;
}

.product-card {
  display: inline-block;
  width: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  flex-shrink: 0;
}

.product-image {
  width: 220rpx;
  height: 180rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  display: block;
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 8rpx;
}

.product-price {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #e53935;
}
