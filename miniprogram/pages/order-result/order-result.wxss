/* pages/order-result/order-result.wxss - 支付结果样式 */
.page-result {
  min-height: 100vh;
  background: linear-gradient(180deg, #10b981 0%, #e8f5e9 300rpx, #f5f5f5 300rpx);
  padding: 40rpx;
  box-sizing: border-box;
}

.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  margin-top: 60rpx;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  font-size: 60rpx;
  margin: 0 auto 32rpx;
}

.result-icon.success {
  background: linear-gradient(135deg, #10b981, #34d399);
  color: #fff;
}

.result-icon.fail {
  background: linear-gradient(135deg, #ef4444, #f87171);
  color: #fff;
}

.result-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
}

.result-amount {
  display: block;
  font-size: 56rpx;
  font-weight: 700;
  color: #10b981;
  margin-bottom: 24rpx;
}

.result-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-top: 48rpx;
}

.btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 30rpx;
  font-weight: 500;
  text-align: center;
  border: none;
}

.btn-outline {
  background: #fff;
  color: #10b981;
  border: 2rpx solid #10b981;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.3);
}

.recommend-section {
  margin-top: 48rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.product-scroll {
  white-space: nowrap;
}

.product-card {
  display: inline-block;
  width: 220rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.product-image {
  width: 220rpx;
  height: 180rpx;
}

.product-name {
  display: block;
  padding: 16rpx;
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-price {
  display: block;
  padding: 0 16rpx 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #e53935;
}
