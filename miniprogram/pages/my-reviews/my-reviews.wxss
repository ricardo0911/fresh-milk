/* pages/my-reviews/my-reviews.wxss */
.page-my-reviews {
    min-height: 100vh;
    background: #f5f7fa;
    padding: 20rpx 30rpx;
    padding-bottom: 60rpx;
}

/* 加载中 */
.loading-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e0e0e0;
    border-top-color: #10b981;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
}

/* 空状态 */
.empty-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.empty-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
}

.empty-text {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 16rpx;
}

.empty-desc {
    font-size: 26rpx;
    color: #999;
}

/* 评价列表 */
.review-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.review-item {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 商品信息 */
.product-info {
    display: flex;
    align-items: center;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 24rpx;
}

.product-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 12rpx;
    margin-right: 20rpx;
    background: #f5f5f5;
}

.product-detail {
    flex: 1;
}

.product-name {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 12rpx;
}

.rating-row {
    display: flex;
    align-items: center;
}

.stars {
    display: flex;
    margin-right: 16rpx;
}

.star {
    font-size: 28rpx;
    color: #ddd;
    margin-right: 4rpx;
}

.star.active {
    color: #fbbf24;
}

.rating-text {
    font-size: 24rpx;
    color: #f59e0b;
}

/* 评价内容 */
.review-content {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 20rpx;
}

/* 评价图片 */
.review-images {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
    margin-bottom: 20rpx;
}

.review-image {
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    background: #f5f5f5;
}

/* 评价时间 */
.review-time {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 20rpx;
}

/* 商家回复 */
.reply-box {
    background: #f8faf9;
    border-left: 6rpx solid #10b981;
    padding: 24rpx;
    border-radius: 8rpx;
}

.reply-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
}

.reply-label {
    font-size: 26rpx;
    color: #10b981;
    font-weight: 600;
}

.reply-time {
    font-size: 22rpx;
    color: #999;
}

.reply-content {
    font-size: 26rpx;
    color: #666;
    line-height: 1.6;
}
