/* pages/feedback-list/feedback-list.wxss */
.page-feedback-list {
    min-height: 100vh;
    background: #f5f7fa;
    padding: 20rpx 30rpx;
    padding-bottom: 180rpx;
}

/* 加载中 */
.loading-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #e0e0e0;
    border-top-color: #10b981;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

.loading-text {
    margin-top: 20rpx;
    font-size: 28rpx;
    color: #999;
}

/* 空状态 */
.empty-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 200rpx 0;
}

.empty-icon {
    font-size: 120rpx;
    margin-bottom: 30rpx;
}

.empty-text {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 16rpx;
}

.empty-desc {
    font-size: 26rpx;
    color: #999;
}

/* 反馈列表 */
.feedback-list {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.feedback-item {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 头部 */
.item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.type-tag {
    font-size: 24rpx;
    color: #666;
    background: #f0f0f0;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
}

.status-tag {
    font-size: 24rpx;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
}

.status-tag.pending {
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
}

.status-tag.processing {
    color: #3b82f6;
    background: rgba(59, 130, 246, 0.1);
}

.status-tag.resolved {
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
}

.status-tag.closed {
    color: #6b7280;
    background: rgba(107, 114, 128, 0.1);
}

/* 内容 */
.item-content {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: 20rpx;
}

/* 回复预览 */
.reply-preview {
    background: #f8faf9;
    border-left: 6rpx solid #10b981;
    padding: 20rpx;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.reply-label {
    font-size: 24rpx;
    color: #10b981;
    font-weight: 600;
    margin-bottom: 8rpx;
}

.reply-text {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

/* 底部 */
.item-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16rpx;
    border-top: 1rpx solid #f0f0f0;
}

.time {
    font-size: 24rpx;
    color: #999;
}

.view-detail {
    font-size: 24rpx;
    color: #10b981;
}

/* 悬浮按钮 */
.fab-btn {
    position: fixed;
    bottom: calc(40rpx + env(safe-area-inset-bottom));
    right: 40rpx;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 24rpx 40rpx;
    border-radius: 50rpx;
    box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
}

.fab-icon {
    font-size: 36rpx;
    color: #fff;
    margin-right: 12rpx;
    font-weight: bold;
}

.fab-text {
    font-size: 28rpx;
    color: #fff;
    font-weight: 600;
}
