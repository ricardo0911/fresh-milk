<view class="container">
  <view class="input-section">
    <textarea 
      class="content-input" 
      placeholder="分享你的新鲜事..." 
      maxlength="500"
      bindinput="onInput"
      value="{{content}}"
    ></textarea>
  </view>



  <view class="topic-section">
    <view class="section-title">选择话题</view>
    <view class="topic-list">
      <view 
        class="topic-item {{selectedTopic === item ? 'active' : ''}}" 
        wx:for="{{topics}}" 
        wx:key="*this"
        bindtap="selectTopic"
        data-topic="{{item}}"
      >
        # {{item}}
      </view>
    </view>
  </view>

  <view class="footer-section">
    <button class="submit-btn" bindtap="submitPost">发布</button>
  </view>
</view>
