/* pages/orders/orders.wxss - 订单列表样式 */
.page-orders {
  min-height: 100vh;
  background: #f5f5f5;
}

.tabs-scroll {
  background: #fff;
  white-space: nowrap;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #eee;
}

.tabs {
  display: inline-flex;
  padding: 0 10rpx;
}

.tab {
  display: inline-block;
  padding: 28rpx 32rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #10b981;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #10b981;
  border-radius: 2rpx;
}

.order-list {
  padding: 20rpx;
}

.order-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 16rpx rgba(0,0,0,0.06);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 600;
}

.status-pending {
  color: #ff9800;
}

.status-paid, .status-shipped {
  color: #2196f3;
}

.status-completed {
  color: #10b981;
}

.status-cancelled {
  color: #999;
}

.order-items {
  padding: 20rpx 24rpx;
}

.order-item {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 0;
}

.order-item:not(:last-child) {
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
  margin-bottom: 12rpx;
}

.item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  background: #f5f5f5;
}

.item-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 120rpx;
}

.item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.item-price {
  font-size: 28rpx;
  color: #e53935;
  font-weight: 600;
}

.item-qty {
  font-size: 24rpx;
  color: #999;
}

.order-footer {
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  font-size: 26rpx;
  color: #666;
}

.total-price {
  font-size: 32rpx;
  font-weight: 700;
  color: #e53935;
}

.order-actions {
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-default {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.btn {
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 24rpx 56rpx;
  border: none;
}
