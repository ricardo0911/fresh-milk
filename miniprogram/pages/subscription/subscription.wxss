/* pages/subscription/subscription.wxss - 周期购样式 */

.page-subscription {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 标签 */
.tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #10b981;
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #10b981;
  border-radius: 2rpx;
}

/* 产品列表 */
.product-list {
  padding: 20rpx;
}

.product-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.product-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.subscription-badge {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.product-prices {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  margin-top: 12rpx;
}

.price {
  font-size: 36rpx;
  font-weight: 700;
  color: #e53935;
}

.price::before {
  content: '¥';
  font-size: 24rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.discount-hint {
  font-size: 22rpx;
  color: #10b981;
  margin-top: 8rpx;
}

/* 订阅列表 */
.subscription-list {
  padding: 20rpx;
}

.subscription-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
}

.subscription-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.subscription-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.status-active {
  background: #e8f5e9;
  color: #10b981;
}

.status-paused {
  background: #fff3e0;
  color: #ff9800;
}

.status-completed {
  background: #f5f5f5;
  color: #999;
}

.subscription-no {
  font-size: 22rpx;
  color: #999;
}

.subscription-body {
  display: flex;
  padding: 24rpx;
}

.subscription-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
}

.subscription-info {
  flex: 1;
  margin-left: 24rpx;
}

.subscription-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.subscription-detail {
  font-size: 24rpx;
  color: #666;
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
}

.subscription-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid #f0f0f0;
  background: #fafafa;
}

.subscription-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #e53935;
}

.btn-cancel {
  font-size: 24rpx;
  padding: 12rpx 32rpx;
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  z-index: 101;
  max-height: 85vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 32rpx;
}

.selected-product {
  display: flex;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 32rpx;
}

.selected-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.selected-info {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.selected-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.selected-spec {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.config-section {
  margin-bottom: 32rpx;
}

.config-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.config-options {
  display: flex;
  gap: 20rpx;
}

.config-option {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.2s;
}

.config-option.active {
  border-color: #10b981;
  background: #e8f5e9;
  color: #10b981;
  font-weight: 500;
}

.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx;
  width: 240rpx;
}

.qty-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  background: #fff;
  border-radius: 50%;
}

.qty-value {
  width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.picker-arrow {
  color: #999;
}

.price-summary {
  background: #fafafa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  color: #666;
}

.summary-row.total {
  margin-bottom: 0;
  padding-top: 16rpx;
  border-top: 1rpx solid #e0e0e0;
}

.total-price {
  font-size: 40rpx !important;
}

.modal-footer {
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.btn {
  border-radius: 12rpx;
  font-size: 30rpx;
  padding: 24rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
}

.btn-block {
  width: 100%;
}
