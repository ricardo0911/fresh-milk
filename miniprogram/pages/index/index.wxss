/* pages/index/index.wxss - 首页样式 */

.page-index {
  padding-bottom: 40rpx;
}

/* 搜索栏 */
.search-bar {
  padding: 20rpx 24rpx;
  background: linear-gradient(180deg, #10b981 0%, #d1fae5 100%);
}

.search-input {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  color: var(--text-placeholder);
  font-size: 28rpx;
}

/* 轮播图 */
.banner {
  height: 320rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 功能入口 */
.feature-grid {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 24rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-light);
  border-radius: 20rpx;
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.feature-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 区块 */
.section {
  margin-bottom: 24rpx;
  background: #ffffff;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 分类滚动 */
.category-scroll {
  white-space: nowrap;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  margin-right: 32rpx;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  border-radius: 24rpx;
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: var(--text-primary);
}

/* 产品横滚 */
.product-scroll {
  white-space: nowrap;
  margin: 0 -24rpx;
  padding: 0 24rpx;
}

.product-card {
  display: inline-block;
  width: 280rpx;
  margin-right: 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  vertical-align: top;
  position: relative;
}

.product-image {
  width: 100%;
  height: 200rpx;
  position: relative;
}

.product-tags {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  display: flex;
  gap: 8rpx;
}

.tag-promo {
  background: var(--error-color);
  color: #fff;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-spec {
  font-size: 22rpx;
  color: var(--text-secondary);
  display: block;
  margin-top: 8rpx;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
}

.add-cart-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--primary-color);
  color: #ffffff;
  border-radius: 50%;
  font-size: 32rpx;
}

/* 产品网格 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.product-card-grid {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  position: relative;
}

.product-image-grid {
  width: 100%;
  height: 240rpx;
  position: relative;
}

/* 周期购横幅 */
.subscription-banner {
  margin: 24rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.subscription-content {
  color: #ffffff;
}

.subscription-badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 12rpx;
}

.subscription-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.subscription-desc {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

.subscription-arrow {
  font-size: 40rpx;
  color: #ffffff;
}

/* 会员专区入口 */
.member-banner {
  margin: 16rpx 24rpx;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, #1e3a5f, #2d5a87);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.member-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.member-icon {
  font-size: 48rpx;
}

.member-info {
  display: flex;
  flex-direction: column;
}

.member-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #fff;
}

.member-desc {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 4rpx;
}

.member-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.member-badge {
  background: linear-gradient(135deg, #ffd700, #ffb800);
  color: #1e3a5f;
  font-size: 20rpx;
  font-weight: 600;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.member-arrow {
  color: rgba(255,255,255,0.8);
  font-size: 28rpx;
}

/* 猜你喜欢 - 响应式设计 */
.guess-section {
  background: #f8fafc;
  padding: 24rpx;
}

.guess-header {
  margin-bottom: 24rpx;
}

.guess-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.guess-icon {
  font-size: 32rpx;
}

/* 网格容器 - 单列布局适配所有机型 */
.guess-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 商品卡片 - 横向布局 */
.guess-card {
  width: 100%;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: row;
}

/* 图片区域 - 固定比例 */
.guess-image-wrap {
  position: relative;
  width: 35vw;
  max-width: 280rpx;
  min-width: 200rpx;
  aspect-ratio: 1;
  flex-shrink: 0;
}

.guess-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.guess-image-wrap .product-tags {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  z-index: 1;
}

/* 新鲜日期标签 */
.guess-fresh-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: linear-gradient(135deg, #10b981, #059669);
  padding: 10rpx 14rpx;
  border-radius: 0 16rpx 0 12rpx;
  text-align: center;
}

.fresh-days {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #fff;
  line-height: 1.2;
}

.fresh-label {
  display: block;
  font-size: 16rpx;
  color: rgba(255,255,255,0.9);
}

/* 商品信息区 - 弹性适配 */
.guess-info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.guess-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.guess-spec {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 8rpx;
}

.guess-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
  padding-top: 12rpx;
}

.guess-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #e53935;
}

.guess-cart-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #10b981;
  border-radius: 50%;
  font-size: 28rpx;
  flex-shrink: 0;
}


