/* 仿微信支付弹窗样式 */

/* 遮罩层 */
.pay-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

/* 弹窗容器 */
.pay-modal-container {
  width: 100%;
  background: #ffffff;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 头部 */
.pay-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
}

.pay-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.pay-placeholder {
  width: 60rpx;
}

/* 金额区域 */
.pay-amount-section {
  padding: 48rpx 24rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.pay-amount-label {
  font-size: 28rpx;
  color: #999;
  display: block;
  margin-bottom: 16rpx;
}

.pay-amount-row {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.pay-currency {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-right: 8rpx;
}

.pay-amount {
  font-size: 72rpx;
  font-weight: 700;
  color: #333;
}

/* 支付方式 */
.pay-method-section {
  padding: 24rpx;
}

.pay-method-item {
  display: flex;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  background: #f8f8f8;
  transition: all 0.2s;
}

.pay-method-item.selected {
  background: #e8f5e9;
  border: 2rpx solid #10b981;
}

.pay-method-item:last-child {
  margin-bottom: 0;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.wechat-icon {
  background: linear-gradient(135deg, #07c160, #06ad56);
}

.balance-icon {
  background: linear-gradient(135deg, #ff9800, #f57c00);
}

.icon-text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 600;
}

.method-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.method-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.method-desc {
  font-size: 24rpx;
  color: #999;
}

.method-check {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
}

.method-check.checked {
  background: #10b981;
  border-color: #10b981;
}

/* 密码输入区域 */
.pay-password-section {
  padding: 32rpx 24rpx;
  text-align: center;
}

.password-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 32rpx;
}

.password-input-wrap {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  position: relative;
  margin-bottom: 24rpx;
}

.password-box {
  width: 88rpx;
  height: 88rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.password-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #333;
}

.password-input-hidden {
  position: absolute;
  left: -9999rpx;
  opacity: 0;
}

.password-hint {
  margin-bottom: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

/* 数字键盘 */
.password-keyboard {
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 16rpx;
  margin-top: 24rpx;
}

.keyboard-row {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.keyboard-row:last-child {
  margin-bottom: 0;
}

.keyboard-key {
  width: 200rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.keyboard-key:active {
  background: #e0e0e0;
}

.keyboard-empty {
  background: transparent;
  box-shadow: none;
}

.keyboard-delete {
  background: #e8e8e8;
}

.delete-icon {
  font-size: 36rpx;
}

/* 支付按钮 */
.pay-button-section {
  padding: 24rpx 48rpx 32rpx;
}

.pay-button {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.pay-button[disabled] {
  background: #ccc;
}

/* 支付中状态 */
.paying-status {
  padding: 48rpx 24rpx;
  text-align: center;
}

.paying-loading {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.loading-circle {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #10b981;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.paying-text {
  font-size: 30rpx;
  color: #666;
}

/* 支付结果 */
.pay-result {
  padding: 48rpx 24rpx;
  text-align: center;
}

.result-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24rpx;
  font-size: 60rpx;
  color: #fff;
}

.result-icon.success {
  background: linear-gradient(135deg, #10b981, #059669);
}

.result-icon.fail {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.result-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.result-desc {
  font-size: 26rpx;
  color: #999;
}
